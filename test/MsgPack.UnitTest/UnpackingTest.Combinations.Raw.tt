#>
		[Test]
		public void TestUnpackBinaryFromString_ByteArray_<#= __testCase.Item1 #>_As<#= ToValueId( __expression ) #>_AsIs()
		{
			var result = Unpacking.UnpackBinary( <#= __expression #> );
			Assert.That( result.ReadCount, Is.EqualTo( <#= __byteLength #> ) );
			Assert.That( result.Value.Length, Is.EqualTo( <#= __testCase.Item2 #> ) );
			Assert.That( result.Value, Is.All.EqualTo( ( byte )'a' ) );
		}

		[Test]
		public void TestUnpackBinaryFromString_Stream_<#= __testCase.Item1 #>_As<#= ToValueId( __expression ) #>_AsIs()
		{
			using ( var buffer = new MemoryStream( <#= __expression #> ) )
			{
				var result = Unpacking.UnpackBinary( buffer );
				Assert.That( buffer.Position, Is.EqualTo( <#= __byteLength #> ) );
				Assert.That( result.Length, Is.EqualTo( <#= __testCase.Item2 #> ) );
				Assert.That( result, Is.All.EqualTo( ( byte )'a' ) );
			}
		}
		
		[Test]
		public void TestUnpackString_ByteArray_<#= __testCase.Item1 #>_As<#= ToValueId( __expression ) #>_AsIs()
		{
